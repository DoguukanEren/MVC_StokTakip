<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->

    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/startbootstrap-grayscale-gh-pages/css/styles.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css"
          rel="stylesheet" />
</head>
<body>
    <!-- Navbar-->
    <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
        <div class="container-fluid justify-content-between">
            <!-- Left elements -->
            <div class="d-flex">
                <!-- Brand -->
                <a class="navbar-brand me-2 mb-1 d-flex align-items-center" href="/Home/Index">
                    <img src="~/img/logo.png"
                         height="20"
                         alt="MDB Logo"
                         loading="lazy"
                         style="margin-top: 2px;" />
                </a>

                <!-- Search form -->
               
            </div>
            <!-- Left elements -->
            <!-- Center elements -->
            <ul class="navbar-nav flex-row d-none d-md-flex">
                @if (User.IsInRole("A"))
                {



                    <li class="nav-item me-3 me-lg-1">
                        <a class="nav-link" href="/TumSatislar/Index">
                            Tüm Satışlar
                            <span><i class="fas fa-cash-register"></i></span>
                        </a>
                    </li>

                    <li class="nav-item me-3 me-lg-1">
                        <a class="nav-link" href="/Urun/KritikStok">
                            Kritik Stoklar @Html.Action("StokCount", "Urun")
                            <span><i class="fas fa-triangle-exclamation"></i></span>
                        </a>
                    </li>
                    <li class="nav-item me-3 me-lg-1">
                        <a class="nav-link" href="/Urun/StokGrafik">
                            Stok Grafiği
                            <span><i class="fas fa-chart-pie"></i></span>
                        </a>
                    </li>

                    <li class="nav-item me-3 me-lg-1">
                        <a class="nav-link" href="/Istatistik/Index">
                            İstatistikler
                            <span><i class="fas fa-chart-line"></i></span>
                        </a>
                    </li>

                    <li class="nav-item me-3 me-lg-1">
                        <a class="nav-link" href="/Kategori/Index">
                            Kategoriler
                            <span><i class="fas fa-square-poll-horizontal"></i></span>
                        </a>
                    </li>

                }





                <li class="nav-item me-3 me-lg-1">
                    <a class="nav-link" href="/Account/Guncelle" style="color:black">
                        @Session["Ad"]
                        @Session["Soyad"]
                        <span><i class="fas fa-id-card"></i></span>
                    </a>
                </li>

                <li class="nav-item me-3 me-lg-1">
                    <a class="nav-link" href="/Urun/Index">
                        Ürünler
                        <span><i class="fas fa-dolly"></i></span>
                    </a>
                </li>


                @if (User.IsInRole("U"))
                {
                    <li class="nav-item me-3 me-lg-1">
                        <a class="nav-link" href="/Satis/Index">
                            Satın Aldıklarım
                            <span><i class="fas fa-shopping-bag fa-lg"></i></span>
                        </a>
                    </li>

                    <li class="nav-item me-3 me-lg-1">
                        <a class="nav-link" href="/Sepet/Index">
                            Sepetim
                            <span><i class="fas fa-shopping-cart"></i></span>
                            <span class="badge rounded-pill badge-notification bg-danger">@{Html.RenderAction("SepetCount", "Sepet");}</span>
                        </a>
                    </li>

                }

                <li class="nav-item me-3 me-lg-1">
                    <a class="nav-link" href="/Account/LogOut">
                        Çıkış Yap
                        <span><i class="fas fa-right-from-bracket"></i></span>
                    </a>
                </li>

            </ul>
            <!-- Center elements -->
            <!-- Right elements -->
           
            <!-- Right elements -->
        </div>
    </nav>
    <!-- Navbar -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <!-- MDB -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.umd.min.js"></script>
    <script src="~/Scripts/JavaScript.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
