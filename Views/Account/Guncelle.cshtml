@model MVC_StokTakip.Models.Kullanici
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
<form method="post">
    <div class="container">
        <div class="form-group">
            <br />
            <label>Ad</label>
            <input type="text" name="Ad" value="@Model.Ad" class="form-control" />
        </div>

        <div class="form-group">
            <br />
            <label>Soyad</label>
            <input type="text" name="Soyad" value="@Model.Soyad" class="form-control" />
        </div>

        <div class="form-group">
            <br />
            <label>Email</label>
            <input type="text" name="Email" value="@Model.Email" class="form-control" />
        </div>

        <div class="form-group">
            <br />
            <label>Sifre</label>
            <input type="text" name="Sifre" value="@Model.Sifre" class="form-control" />
        </div>

        <div class="form-group">
            <br />
            <label>Şifre Tekrar</label>
            <input type="text" name="SifreTekrar" value="@Model.SifreTekrar" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>



